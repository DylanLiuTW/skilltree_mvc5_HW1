@model InOutViewModel
@{
    ViewBag.Title = "我的記帳本";
}
<div class="well">
    @using ( Html.BeginForm( null, null, FormMethod.Post, new { @class = "form-horizontal" } ) )
    {
        <hr />
        <div class="form-group">
            @Html.LabelFor( m => m.Category, new { @class = "col-sm-2 control-label" } )
            <div class="col-sm-10">
                @Html.DropDownListFor( m => m.Category, ( SelectList ) ViewData[ "InOutEnumDropDownList" ], "請選擇", new { @class = "form-control" } )
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor( m => m.Money, new { @class = "col-sm-2 control-label" } )
            <div class="col-sm-10">
                @Html.TextBoxFor( m => m.Money, new { @class = "form-control", placeholder = "金額" } )
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor( m => m.Date, new { @class = "col-sm-2 control-label" } )
            <div class="col-sm-10">
                @Html.TextBoxFor( m => m.Money, new { @class = "form-control", placeholder = "日期" } )
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor( m => m.Description, new { @class = "col-sm-2 control-label" } )
            <div class="col-sm-10">
                @Html.TextAreaFor( m => m.Description, new { @class = "form-control" } )
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-8 col-sm-4">
                <button type="submit" class="btn btn-default">送出</button>
            </div>
        </div>
    }
</div>

@Html.Action( "SubIndex" )
